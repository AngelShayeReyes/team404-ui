{% extends "layout.njk" %}

{% set title = 'Home' %}


{% block content  %}  

<input type="text" id="searchBox" onkeyup="searchFunction()" placeholder="Search.." title="Type in a page">

<h1 id=page_title>Kainos Job Application</h1>
<p>This online job application serves both Kainos employees and recruitment admin to retrieve and update job roles and their relevant information.</p>
<div class="rowImg">
<ul-none id="myUL">
  <li><a href="#"></a> 
    <div class="columnImg">
      <a href="viewjobroles"><img id="Job Roles Link" src="../images/JobRoles.png" alt="Picture of JobRoles" class="imgWrap"></a>
      <div>Job Roles</div>
    </div>
  </li>
  <li><a href="#"></a>
    <div class="columnImg">
      <a href="viewcompetencies"><img id="Competencies for the Engineering Capability Link" src="../images/Jigsaw.png" alt="Picture of jigsaw" class="imgWrap"></a>
      <div>Competencies for the Engineering Capability</div>
    </div>
  </li>
  <li><a href="#"></a>
    <div class="columnImg">
      <a href="viewmatrixofroles"><img id="Matrix of Roles Link" src="../images/Pyramid.png" alt="Picture of Pyramid" class="imgWrap"></a>
      <div>Matrix of Roles</div>
    </div>
  </li>
</ul>
</div>

<script>
function searchFunction() {
    var input, filter, ul, li, div, i, txtValue;
    input = document.getElementById("searchBox");
    filter = input.value.toUpperCase();
    ul = document.getElementById("myUL");
    li = ul.getElementsByTagName("li");
    for (i = 0; i < li.length; i++) {
        div = li[i].getElementsByTagName("div")[0];
        txtValue = div.textContent || div.innerText;
        if (txtValue.toUpperCase().indexOf(filter) > -1) {
            li[i].style.display = "";
        } else {
            li[i].style.display = "none";
        }
    }
}
</script>

{% endblock %}